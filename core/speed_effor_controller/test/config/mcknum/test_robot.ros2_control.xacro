<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <ros2_control name="test_robot_control" type="system">
        <hardware>
            <plugin>RM_hardware_interface/RM_DJIMotorHardwareInterface</plugin>
            <!-- <plugin>mock_components/GenericSystem</plugin> -->
            <param name="command_frequence">1000</param>
            <param name="can_port">can0</param>
        </hardware>

        <joint name="wheel_fl_joint">

            <param name="can_id">2</param>
            <param name="motor_type">C620</param>
            <param name="reverse">false</param>

            <command_interface name="effort"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>

        </joint>

        <joint name="wheel_fr_joint">

            <param name="can_id">1</param>
            <param name="motor_type">C620</param>
            <param name="reverse">true</param>

            <command_interface name="effort"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>

        </joint>

        <joint name="wheel_rl_joint">

            <param name="can_id">3</param>
            <param name="motor_type">C620</param>
            <param name="reverse">false</param>

            <command_interface name="effort"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

        <joint name="wheel_rr_joint">

            <param name="can_id">4</param>
            <param name="motor_type">C620</param>
            <param name="reverse">true</param>

            <command_interface name="effort"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

    </ros2_control>
</robot>
