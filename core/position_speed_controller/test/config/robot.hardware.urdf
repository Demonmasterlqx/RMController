<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <ros2_control name="test_robot_control" type="system">
        <hardware>
            <plugin>RM_hardware_interface/RM_DJIMotorHardwareInterface</plugin>
            <param name="can_port">can1</param>
            <param name="enable_topic">enable_topic</param>
        </hardware>

        <joint name="joint_1">

            <param name="can_id">5</param>
            <param name="motor_type">C610</param>
            <param name="reverse">false</param>

            <command_interface name="effort"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
            <param name="reduction_ratio">36</param>

        </joint>

    </ros2_control>
</robot>
